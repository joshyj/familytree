  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "@vitejs/plugin-react": "^4.3.4",
    "firebase-tools": "^15.2.1",
    "typescript": "~5.6.2",
